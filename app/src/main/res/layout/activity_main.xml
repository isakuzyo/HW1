<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/main_screen_24"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/amsterdamTime"
                layout="@layout/timezone"/>

            <include
                android:id="@+id/bangkokTime"
                layout="@layout/timezone"/>

            <include
                android:id="@+id/dubaiTime"
                layout="@layout/timezone"/>

            <include
                android:id="@+id/londonTime"
                layout="@layout/timezone"/>

            <include
                android:id="@+id/mexicoCityTime"
                layout="@layout/timezone"/>

            <include
                android:id="@+id/newYorkTime"
                layout="@layout/timezone"/>

            <include
                android:id="@+id/parisTime"
                layout="@layout/timezone" />

            <include
                android:id="@+id/sydneyTime"
                layout="@layout/timezone" />

            <include
                android:id="@+id/tokyoTime"
                layout="@layout/timezone" />

            <include
                android:id="@+id/torontoTime"
                layout="@layout/timezone" />
            <include
                android:id="@+id/vancouverTime"
                layout="@layout/timezone" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="@string/HR_12"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:text="@string/HR_24"
            android:textColor="#FF5722" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>